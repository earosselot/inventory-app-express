extends layout

block content

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(
        type='text' 
        placeholder='Category name...' 
        name='name' 
        value=(category===undefined ? '' : category.name))
    div.form-group
      label(for='description') Description:
      input#description.form-control(
        type='text' 
        placeholder='Description...' 
        name='description' 
        value=(category===undefined ? '' : category.description)) 
    button.btn.btn-primary(type='submit') Submit
  
  if errors 
    ul 
      for error in errors 
        li= error.msg